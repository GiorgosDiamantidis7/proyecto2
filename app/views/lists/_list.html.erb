<div class="container">
  <div class="border p-3 rounded mb-4">
    <div class="d-flex justify-content-center align-item-center p-2">
    <span class="me-auto"><%= list.name %></span>
    <span class="me-auto"><%= list.date %></span>
    <span class="me-auto"><%= list.price %></span>
    <%= link_to list_path(list), data: {turbo_method: :delete}, class: 'btn btn-danger me-3' do%>
    <i class="fa-solid fa-trash"></i>
    <%end%>
    <%= link_to edit_list_path(list), class: 'btn btn-warning' do%>
    <i class="fa-regular fa-pen-to-square"></i>
    <%end%>
      </div>
  </div>
</div>
